{% extends 'admin/combined_template.html.twig' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<main class="py-5">
    <div class="container">
        <h1 class="display-4 text-center mb-4">Pedidos</h1>

        <!-- Tabla para mostrar los pedidos -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Cliente</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.client.getFirstName }} {{ order.client.getLastName }}</td>
                        <td>{{ order.getOrderDate|date('Y-m-d H:i') }}</td>
                        <td>{{ order.getStatus }}</td>
                        <td>{{ order.getTotal }} â‚¬</td>
                        <td>
                            <form action= method="get">
                                <button type="submit" class="btn btn-warning btn-sm">
                                    Detalles
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</main>

{% endblock %}
