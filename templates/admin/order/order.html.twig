{% extends 'admin/combined_template.html.twig' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<main class="py-5">
    <div class="container">
        <h1 class="display-4 text-center mb-4">Pedidos</h1>

        <!-- Tabla para mostrar los pedidos -->
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Fecha</th>
                    <th scope="col">Status</th>
                    <th scope="col">Total</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr>
                        <td>{{ order.idOrder }}</td>
                        <td>{{ order.client.firstName }} {{ order.client.lastName }}</td>  <!-- Usar los mÃ©todos getter -->
                        <td>{{ order.orderDate|date('Y-m-d H:i') }}</td>
                        <td>{{ order.status }}</td>
                        <td>{{ order.total }}</td>
                        <td>
                            <a href="{{ path('order_detail', {id: order.idOrder}) }}">View</a>
                            <a href="{{ path('orders_delete', {id: order.idOrder}) }}" onclick="return confirm('Are you sure?')">Delete</a>
                            <a href="{{ path('orders_update', {id: order.idOrder}) }}">Update Status</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</main>

{% endblock %}
