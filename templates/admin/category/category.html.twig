{% extends 'admin/combined_template.html.twig' %}

{% block content %}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">

<main class="py-5">
    <div class="container">
        <h1 class="display-4 text-center mb-4">Categorías</h1>

        <!-- Formulario para agregar nueva categoría -->
        <div class="mb-4">
            <h3>Añadir Nueva Categoría</h3>
            <input type="text" id="newCategoryName" class="form-control mb-2" placeholder="Nombre de la categoría">
            <button id="addCategoryBtn" class="btn btn-warning">Agregar</button>
        </div>

        <div class="row row-cols-1 row-cols-md-2 g-4"> 
            {% for categoria in categorias %}
                <div class="col">
                    <div class="card h-100">
                        <img src="/imagenes/{{ categoria.name|lower }}.jpg" alt="{{ categoria.name }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">{{ categoria.name }}</h5>
                            <button class="btn btn-warning ver-productos" data-id="{{ categoria.idCategory }}" data-name="{{ categoria.name }}">
                                Ver productos
                            </button>
                            <button class="btn btn-warning edit-category" data-id="{{ categoria.idCategory }}" data-name="{{ categoria.name }}">Editar</button>
                            <button class="btn btn-warning delete-category" data-id="{{ categoria.idCategory }}">Eliminar</button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</main>

<!-- Modal de Bootstrap para ver productos -->
<div class="modal fade" id="productosModal" tabindex="-1" aria-labelledby="productosModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="productosModalLabel">Motos</h5>
                <button type="button" class="btn-close" style="background-color: #f0ad4e; border: none;" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="productosContainer" class="row row-cols-1 row-cols-md-3 g-4"></div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        // Ver productos de la categoría
        $(".ver-productos").click(function () {
            let categoriaId = $(this).data("id");
            let categoriaName = $(this).data("name");

            $("#productosModalLabel").text("Motos " + categoriaName);
            $("#productosContainer").html("<p>Cargando productos...</p>");

            $.ajax({
                url: "/category/" + categoriaId + "/products",
                method: "GET",
                dataType: "json",
                success: function (data) {
                    if (data.length === 0) {
                        $("#productosContainer").html("<p>No hay productos en esta categoría.</p>");
                        return;
                    }

                    let productosHtml = "";
                    data.forEach(function (item) {
                        productosHtml += `
                            <div class="col">
                                <div class="card h-100">
                                    <img src="${item.product.image}" class="card-img-top" style="height: 200px; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title">${item.product.name}</h5>
                                        <p class="card-text">${item.product.description}</p>
                                        <p class="card-text"><strong>Precio:</strong> ${item.product.price} €</p>
                                        <p class="card-text"><strong>Stock:</strong> ${item.product.stock}</p>
                                    </div>
                                </div>
                            </div>
                        `;
                    });

                    $("#productosContainer").html(productosHtml);
                },
                error: function () {
                    $("#productosContainer").html("<p>Error al cargar los productos.</p>");
                }
            });

            var productosModal = new bootstrap.Modal(document.getElementById('productosModal'));
            productosModal.show();
        });

        // Agregar nueva categoría
        $("#addCategoryBtn").click(function () {
            let categoryName = $("#newCategoryName").val().trim();
            if (categoryName === "") {
                alert("El nombre de la categoría no puede estar vacío.");
                return;
            }

            $.ajax({
                url: "/admin/categoria/nueva",
                method: "POST",
                contentType: "application/json",
                data: JSON.stringify({ name: categoryName }),
                success: function () {
                    alert("Categoría creada con éxito.");
                    location.reload();
                },
                error: function () {
                    alert("Error al crear la categoría.");
                }
            });
        });

        // Editar categoría
        $(".edit-category").click(function () {
            let categoryId = $(this).data("id");
            let newCategoryName = prompt("Nuevo nombre de la categoría:", $(this).data("name"));

            if (newCategoryName === null || newCategoryName.trim() === "") {
                return;
            }

            $.ajax({
                url: "/admin/categoria/" + categoryId,
                method: "PUT",
                contentType: "application/json",
                data: JSON.stringify({ name: newCategoryName }),
                success: function () {
                    alert("Categoría actualizada con éxito.");
                    location.reload();
                },
                error: function () {
                    alert("Error al actualizar la categoría.");
                }
            });
        });

        // Eliminar categoría
        $(".delete-category").click(function () {
            let categoryId = $(this).data("id");
            if (!confirm("¿Estás seguro de que quieres eliminar esta categoría?")) {
                return;
            }

            $.ajax({
                url: "/admin/categoria/" + categoryId,
                method: "DELETE",
                success: function () {
                    alert("Categoría eliminada con éxito.");
                    location.reload();
                },
                error: function () {
                    alert("Error al eliminar la categoría.");
                }
            });
        });
    });
</script>

{% endblock %}
